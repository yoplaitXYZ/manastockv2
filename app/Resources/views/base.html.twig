<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="container">

        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Product Stock</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path("homepage") }}">Home</a></li>
                    {% if app.user is defined and (is_granted('ROLE_ADMINISTRATEUR') or  is_granted('ROLE_RESPONSABLE')) %}
                        <li><a href="{{ path("products") }}"> Inventory  </a></li>
                        <li><a href="{{ path('produit_add') }}">add product</a></li>
                    {% endif %}

                    <li><a href="{{ path("stock") }}">Stock </a></li>
                    <li><a href="/logout">logout</a></li>
                </ul>
            </div>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
